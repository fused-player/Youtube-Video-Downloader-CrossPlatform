<PlaylistItem@BoxLayout>:
    orientation: "horizontal"
    size_hint_y: None
    height: dp(100)
    spacing: dp(16)
    padding: dp(8)
    canvas.before:
        Color:
            rgba: (0, 0.7, 1, 0.2) if self.selected else (0, 0, 0, 0)
        Rectangle:
            pos: self.pos
            size: self.size





    Image:
        source: root.thumb
        size_hint_x: None
        width: dp(100)

    MDLabel:
        text: root.title
        halign: "left"
        valign: "middle"
        text_size: self.size


<ItemConfirm>
    on_release: 
        root.set_icon(check)
        app.on_choose_q(root.text)

    CheckboxLeftWidget:
        id: check
        group: "check"
        on_release : app.on_choose_q(root.text)


MDBoxLayout:
    orientation : "vertical"

    MDTopAppBar:
        title : "Yt Downloader App"
        pos_hint : {"top":1}
        left_action_items : [["menu",lambda x : nav_drawer.set_state('open')]]

    MDNavigationLayout:
        MDScreenManager:
            id : screen_manager

            MDScreen:
                name : "home"

                MDBoxLayout:
                    id : main_box
                    orientation : "vertical"
                    padding : dp(16)
                    spacing : dp(16)
                    MDBoxLayout:
                        spacing : dp(16)
                        adaptive_height : True
                        MDTextField:
                            id : url
                            hint_text : "Paste URL"
                            mode : "round"
                        
                        MDFillRoundFlatIconButton:
                            text : "Fetch"
                            size_hint_x : 0.4
                            icon : "magnify"
                            on_release : app.on_fetch()
                            #pos_hint : {"center_x":.5,"center_y":.5}
                    
                    MDSmartTile:
                        id : thumb
                        source: "test.png"
                        allow_strech : True
                        pos_hint: {"center_x": .5, "center_y": .5}
                        #size_hint_y : 0.8

                                
                        MDLabel:
                            id : thumbnail_title
                            text: "Julia and Julie"
                            bold: True

                    MDBoxLayout:
                        
                        MDBoxLayout:
                            orientation : "vertical"

                            MDLabel:
                                id : channel_name
                                text : "Channel : "

                            MDLabel:
                                id : file_size
                                text : "Size : "
                            
                            MDLabel:
                                text : "Type : "

                    MDBoxLayout:
                        id: chip_box
                        spacing: "4dp"
                        adaptive_height : True


                        MDBoxLayout:
                            adaptive_height: True
                            MDIconButton:
                                id : v
                                icon : "circle-outline"
                                icon_size : dp(16)
                                on_release : app.choose_cat("v","a","b")

                            MDLabel:
                                text : "V"

                            MDIconButton:
                                id : a
                                icon : "circle-outline"
                                icon_size : dp(16)
                                on_release : app.choose_cat("a","v","b")


                            MDLabel:
                                text : "A"

                            MDIconButton:
                                id : b
                                icon : "circle-outline"
                                icon_size : dp(16)
                                on_release : app.choose_cat("b","v","a")

                            MDLabel:
                                text : "B"
                        

                            MDRoundFlatIconButton:
                                id : qual
                                text: "Quality"
                                icon: "multimedia"
                                on_release : app.show_quality_selection()
                    
                    MDBoxLayout:

                        spacing : dp(18)
                        MDRoundFlatIconButton:
                            text: "Choose Dir"
                            icon: "folder"
                            on_release : app.thread_calls("choose_dir")

                        MDRoundFlatIconButton:
                            id : main_fetch
                            text: "Download"
                            icon: "download"
                            on_release : app.thread_calls("download")
                        
                    MDProgressBar:
                        id : progress
                        size_hint_y : None
                        height : dp(8)
                        value: 0
                                
                
                    Widget :
                        size_hint_y : 1

            MDScreen:
                name : "playlist"
                MDBoxLayout:
                    id : playlist_box
                    orientation : "vertical"
                    padding : dp(16)
                    spacing : dp(16)
                    MDBoxLayout:
                        spacing : dp(16)
                        adaptive_height : True
                        MDTextField:
                            id : url_play
                            hint_text : "Paste URL"
                            mode : "round"
                        
                        MDFillRoundFlatIconButton:
                            id : play_fetch
                            text : "Fetch"
                            size_hint_x : 0.4
                            icon : "magnify"
                            on_release : app.on_fetch_playlist()
                            #pos_hint : {"center_x":.5,"center_y":.5}

                    MDBoxLayout:
                        adaptive_height : True
                        spacing : dp(16)
                        
                        MDFillRoundFlatIconButton:
                            id : play_download
                            text : "download"
                            icon : "magnify"
                            disabled : True
                            
                            on_release : app.on_playlist_download()
                            #pos_hint : {"center_x":.5,"center_y":.5}
                        
                        MDLabel:
                            id : downloaded

                            text : "Downloaded :  0/0"
                        
                    


                    MDRecycleView:
                        id : play_list
                        size_hint_y : 1
                        viewclass: "PlaylistItem"

                        MDSelectableRecycleBoxLayout:
                            default_size: None, dp(100)
                            default_size_hint: 1, None
                            size_hint_y: None
                            height: self.minimum_height
                            orientation: 'vertical'
                            multiselect: True
                            touch_multiselect: True



            MDScreen:
                name : "about"
                MDBoxLayout:
                    orientation: "vertical"
                    padding: dp(20)
                    spacing: dp(15)

                    MDLabel:
                        text: "üì± YouTube Video Downloader"
                        font_style: "H5"
                        halign: "center"
                        theme_text_color: "Primary"

                    MDLabel:
                        text: "Version: 1.0"
                        font_style: "Subtitle1"
                        halign: "center"
                        theme_text_color: "Secondary"

                    MDSeparator:
                        height: dp(1)

                    MDLabel:
                        text: "üîß Developer: [b]fused-player[/b]"
                        markup: True
                        font_style: "Subtitle2"
                        halign: "center"

                    MDLabel:
                        text: "üíª Cross-platform app to download YouTube videos and playlists with ease. Built using Python, KivyMD, and FFmpeg integration for Android merging."
                        halign: "center"
                        theme_text_color: "Hint"
                        text_size: self.width * 0.95, None
                        size_hint_y: None
                        height: self.texture_size[1]

                    MDLabel:
                        text: "[ref=github][u][color=#1e88e5]üåê GitHub Repository[/color][/u][/ref]"
                        markup: True
                        halign: "center"
                        on_ref_press: app.open_link("https://github.com/fused-player/Youtube-Video-Downloader-CrossPlatform")


                    Widget:

                    MDRaisedButton:
                        text: "Visit GitHub Profile"
                        pos_hint: {"center_x": 0.5}
                        on_release: app.open_link("https://github.com/fused-player")
            
        MDNavigationDrawer:
            id : nav_drawer

            MDScrollView:
                MDList:
                    OneLineIconListItem:
                        text : "Home"

                        on_press :
                            screen_manager.current = "home"
                            nav_drawer.set_state('close')

                        IconLeftWidget:
                            icon : "home"

                    OneLineIconListItem:
                        text : "Playlist"

                        on_press :
                            screen_manager.current = "playlist"
                            nav_drawer.set_state('close')

                        IconLeftWidget:
                            icon : "playlist-plus"

                    OneLineIconListItem:
                        text : "About"

                        on_press :
                            screen_manager.current = "about"
                            nav_drawer.set_state('close')

                        IconLeftWidget:
                            icon : "information"


                    


